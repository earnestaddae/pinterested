<div class="jumbotron text-center">
  <h1>Welcome to Pinterested</h1>
  <p>Pin the topics and things that interest you.</p>
  <p><%= link_to "Sign up now", new_user_registration_path, class: "btn btn-success btn-lg" %> or <%= link_to "Sign up now", new_user_session_path, class: "btn btn-info btn-lg" %> </p>
</div>

<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box">
      <div class="panel panel-default">
        <%= link_to(image_tag(pin.image.url(:medium), class: "img-responsive"), pin) if pin.image %> <br>
        <div class="panel-body">
          <%= pin.description %><br>
        </div>
          <% if pin.user == current_user %>
          <div class="panel-footer">
            <%= link_to 'Edit', edit_pin_path(pin) %> |
            <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %> <br>
          </div>
          <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="text-center">
  <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>











